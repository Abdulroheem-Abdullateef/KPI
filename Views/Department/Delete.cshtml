
@model KpiNew.Dtos.DepartmentDto


<h3>Are you sure you want to delete this Department?</h3>
<div style="font-size: 130%;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Description:
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Employee:
        </dt>

        @foreach (var item in Model.Employees)
           {
             <dd class="col-sm-10">
               @item.FirstName
           
             </dd>

             <dd class="col-sm-10">
               @item.LastName
             </dd>

        }
      
        <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
        </form>

    </div>
