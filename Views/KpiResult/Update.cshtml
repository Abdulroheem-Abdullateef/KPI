@model KpiNew.Dtos.UpdateKpiResultRequestModel


<div class="container">
    <div class="row justify-content-cen ter">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:greenyellow">Kpi</h1>
                    <p class="tagcolor" style="color:greenyellow">Please fill in this form to Update KpiResult.</p>
                    <hr class="tagcolor" style="color:yellow">

                </div>
                <form asp-action="Update">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">

                        <div class="form-group col-sm-6">
                            <label asp-for="DateCreated" class="control-label"></label>
                            <input asp-for="DateCreated" class="form-control" />
                            <span asp-validation-for="DateCreated" class="text-danger"></span>
                        </div>

                       
                        <div class="form-group col-sm-6">
                            <label asp-for="Month" class="control-label"></label>
                            <input asp-for="Month" class="form-control" />
                            <span asp-validation-for="Month" class="text-danger"></span>
                        </div>

                         <div class="form-group col-sm-6">
                            <label asp-for="Year" class="control-label"></label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>

                         <div class="form-group col-sm-6">
                            <label asp-for="TotalPercentage" class="control-label"></label>
                            <input asp-for="TotalPercentage" class="form-control" />
                            <span asp-validation-for="TotalPercentage" class="text-danger"></span>
                        </div>



                        <div class="form-group ">
                            <input href="#myModal" type="submit" value="Submit"
                                class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        </div>

                </form>
            </div>
        </div>

    </div>
</div>


